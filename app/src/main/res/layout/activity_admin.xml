<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/loginn"
    android:layout_height="match_parent"
    tools:context=".activity.Admin_Activity">

    <RelativeLayout
        android:background="@drawable/loginn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_alignParentStart="true"
            android:id="@+id/textviewme"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#322D2D"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Admin Corner"
            />

        <ImageView
            android:id="@+id/addstudent"
            android:padding="6dp"
            android:layout_width="60dp"
            android:layout_toRightOf="@id/textviewme"
            android:layout_height="60dp"
            android:src="@drawable/addstudent"
            android:layout_marginStart="30dp"
            />
        <ImageView
            android:id="@+id/logadminout"
            android:padding="6dp"
            android:layout_toRightOf="@id/addstudent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_logout_24"
            android:layout_marginStart="20dp"
            />

    </RelativeLayout>

    <SearchView
        android:background="@drawable/search_back"
        android:id="@+id/search_view"
       android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColorHint="@color/black"
        android:textStyle="bold"
android:queryHint="search by name"
        android:drawableEnd="@drawable/search_bar"

        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:theme="@style/Widget.AppCompat.ProgressBar"
        android:id="@+id/admin_progressbar"
        android:visibility="gone"
        android:layout_marginStart="180dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/admin_recyclerview"
        />








</LinearLayout>